        "onset_delay": 1,
        "damage": 3,
        "damage_easy": 2,
        "damage_source": {
            "name": "hurt_by_water",
            "unblockable": true,
            "bypasses_armor": true
        },
        "condition": {
            "type": "origins:or",
            "conditions": [
                {
                    "type": "origins:fluid_height",
